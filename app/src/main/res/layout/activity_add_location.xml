<?xml version="1.0" encoding="utf-8"?>
<androidx.core.widget.NestedScrollView xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:android="http://schemas.android.com/apk/res/android">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@drawable/back1"
        android:orientation="vertical"
        android:padding="10dp"
        tools:context=".AddLocationActivity">

        <TextView
            android:id="@+id/tvHead"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:fontFamily="sans-serif-smallcaps"
            android:text="@string/addL"
            android:textColor="#070000"
            android:textSize="24sp" />

        <TextView
            android:id="@+id/tvUploadImg"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="10dp"
            android:paddingTop="10dp"
            android:text="@string/mgChangeImg"
            android:textAlignment="center"
            android:textColor="#070000"
            android:textSize="24sp" />

        <ImageView
            android:id="@+id/imgUploadAH"
            android:layout_width="334dp"
            android:layout_height="150dp"
            android:layout_gravity="center"
            android:layout_marginBottom="20dp"
            android:background="@drawable/btn_type_delete" />


        <TextView
            android:id="@+id/tvName"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:paddingStart="30dp"
            android:text="@string/mgName"
            android:textColor="#070000"
            android:textSize="24sp" />

        <EditText
            android:id="@+id/tfAHname"
            android:layout_width="match_parent"
            android:layout_height="45dp"
            android:layout_gravity="center"
            android:layout_marginTop="5dp"
            android:layout_marginBottom="10dp"
            android:background="@drawable/btn_type_delete"
            android:ems="10"
            android:inputType="textPersonName" />

        <TextView
            android:id="@+id/tvDistrict"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:paddingStart="30dp"
            android:text="@string/mgDistrict"
            android:textColor="#070000"
            android:textSize="24sp" />

        <Spinner
            android:id="@+id/spinnerHADistrict"
            android:layout_width="match_parent"
            android:layout_height="35dp"
            android:layout_gravity="center"
            android:layout_marginTop="5dp"
            android:layout_marginBottom="10dp"
            android:background="@drawable/dropdown_spinner_custom" />


        <TextView
            android:id="@+id/tvDescription"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:paddingStart="30dp"
            android:text="@string/mgDescription"
            android:textColor="#070000"
            android:textSize="24sp" />

        <EditText
            android:id="@+id/tfAHdescription"
            android:layout_width="match_parent"
            android:layout_height="100dp"
            android:layout_gravity="center"
            android:layout_marginTop="5dp"
            android:layout_marginBottom="10dp"
            android:background="@drawable/btn_type_delete"
            android:ems="10"
            android:inputType="textPersonName" />

        <TextView
            android:id="@+id/tvContact"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:paddingStart="30dp"
            android:text="@string/mgAddress"
            android:textColor="#070000"
            android:textSize="24sp" />

        <EditText
            android:id="@+id/tfAHcontact"
            android:layout_width="match_parent"
            android:layout_height="45dp"
            android:layout_gravity="center"
            android:layout_marginTop="5dp"
            android:layout_marginBottom="10dp"
            android:background="@drawable/btn_type_delete"
            android:ems="10"
            android:inputType="textPersonName" />

        <TextView
            android:id="@+id/TicketPriceAdult"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:paddingStart="30dp"
            android:text="@string/mgTPriceAdult"
            android:textColor="#070000"
            android:textSize="24sp" />

        <EditText
            android:id="@+id/tfTPriceAdult"
            android:layout_width="match_parent"
            android:layout_height="45dp"
            android:layout_gravity="center"
            android:layout_marginTop="5dp"
            android:layout_marginBottom="10dp"
            android:background="@drawable/btn_type_delete"
            android:text="0"
            android:ems="10"
            android:inputType="number" />

        <TextView
            android:id="@+id/TicketPriceChild"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:paddingStart="30dp"
            android:text="@string/mgTPriceChild"
            android:textColor="#070000"
            android:textSize="24sp" />

        <EditText
            android:id="@+id/tfTpriceChild"
            android:layout_width="match_parent"
            android:layout_height="45dp"
            android:layout_gravity="center"
            android:layout_marginTop="5dp"
            android:layout_marginBottom="10dp"
            android:background="@drawable/btn_type_delete"
            android:text="0"
            android:ems="10"
            android:inputType="number" />

        <Button
            android:id="@+id/saveBtn"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:background="@drawable/btn_type1"
            android:text="@string/saveBtn"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.287"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

    </LinearLayout>
</androidx.core.widget.NestedScrollView>