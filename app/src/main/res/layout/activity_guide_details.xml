<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
xmlns:app="http://schemas.android.com/apk/res-auto"
xmlns:tools="http://schemas.android.com/tools"
android:layout_width="match_parent"
android:layout_height="match_parent"
android:orientation="vertical"
tools:context=".GuideDetailsActivity"
android:padding="10dp">

    <TextView
        android:id="@+id/tvGuideName"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:layout_marginBottom="5dp"
        android:fontFamily="sans-serif-condensed-medium"
        android:text="guide name"
        android:textColor="#000000"
        android:textSize="30sp" />

<RatingBar
    android:id="@+id/ratingBar2"
    style="@style/Widget.AppCompat.RatingBar.Small"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_gravity="center_horizontal" />

<ImageView
    android:id="@+id/ivGuideImage"
    android:layout_width="300dp"
    android:layout_height="200dp"
    android:transitionName="transition1"
    android:layout_gravity="center_horizontal"
    android:layout_marginBottom="30dp"
    android:layout_marginTop="20dp"
    />

    <TextView
        android:id="@+id/textView28"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="guide email" />

    <TextView
        android:id="@+id/tvGuideDescription"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="guide description"
        android:textAlignment="viewStart"
        android:textColor="#000000"
        android:textStyle="italic" />

<Button
    android:id="@+id/contactBtn"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:background="@drawable/btn_type1"
    android:onClick="contactHandler"
    android:paddingStart="10dp"
    android:paddingEnd="10dp"
    android:text="@string/contactBtn"
    android:layout_marginLeft="150dp"
    android:layout_marginTop="5dp"
    android:layout_marginBottom="10dp"/>

<RatingBar
    android:id="@+id/GuideRateInput"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:fadingEdge="horizontal|vertical" />

<Button
    android:id="@+id/GRateSubmit"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:text="@string/submit" />



</LinearLayout>