<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/sr-scrollv"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/adilist"
    android:orientation="vertical"
    android:paddingLeft="10dp"
    android:paddingTop="10dp"
    android:paddingRight="10dp"
    tools:context=".ResultsRidesActivity">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/srRideTopic"
            android:layout_width="wrap_content"
            android:layout_height="117dp"
            android:fontFamily="sans-serif-condensed-light"
            android:paddingStart="30dp"
            android:paddingTop="20dp"
            android:paddingBottom="40dp"
            android:text="@string/searchResultsRTopic"
            android:textColor="#070000"
            android:textSize="18sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/inputdistR"
            android:layout_width="93dp"
            android:layout_height="50dp"
            android:layout_weight="1"
            android:fontFamily="sans-serif-smallcaps"
            android:text="TextView"
            android:textColor="#070000"
            android:textSize="18sp"
            android:textStyle="bold" />


    </LinearLayout>


    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/resultRlist"
        android:layout_width="match_parent"
        android:layout_height="match_parent" />

</LinearLayout>