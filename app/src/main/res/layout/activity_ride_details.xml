<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".RideDetailsActivity"
    android:padding="10dp">

    <TextView
        android:id="@+id/rideName"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:layout_marginBottom="5dp"
        android:fontFamily="sans-serif-condensed-medium"
        android:text="ride name"
        android:textColor="#000000"
        android:textSize="30sp" />

    <ImageView
        android:id="@+id/rideImage"
        android:layout_width="300dp"
        android:layout_height="200dp"
        android:transitionName="transition1"
        android:layout_gravity="center_horizontal"
        android:layout_marginBottom="30dp"
        android:layout_marginTop="20dp"
        />

    <TextView
        android:id="@+id/rideType"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="ride type"
        android:textAlignment="viewStart"
        android:textColor="#000000"
        android:textStyle="italic" />

    <TextView
        android:id="@+id/rideVehicleNo"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Vehicle No" />

    <TextView
        android:id="@+id/rideCost"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Cost per km" />

    <TextView
        android:id="@+id/rideDescription"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Ride Description / Extra" />

    <Button
        android:id="@+id/contactBtn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@drawable/btn_type1"
        android:paddingStart="10dp"
        android:paddingEnd="10dp"
        android:text="@string/contactBtn"
        android:layout_marginLeft="150dp"
        android:layout_marginTop="5dp"
        android:layout_marginBottom="10dp"/>

    <Button
        android:id="@+id/ridePaymentBtn"
        android:layout_width="107dp"
        android:layout_height="wrap_content"
        android:layout_marginLeft="150dp"
        android:layout_marginTop="5dp"
        android:layout_marginBottom="10dp"
        android:background="@drawable/btn_type1"
        android:paddingStart="10dp"
        android:paddingEnd="10dp"
        android:text="Button" />


</LinearLayout>