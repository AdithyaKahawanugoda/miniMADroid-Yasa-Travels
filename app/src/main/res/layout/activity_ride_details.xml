<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
xmlns:app="http://schemas.android.com/apk/res-auto"
xmlns:tools="http://schemas.android.com/tools"
android:layout_width="match_parent"
android:layout_height="match_parent"
android:orientation="vertical"
tools:context=".RideDetailsActivity"
android:padding="10dp">

    <TextView
        android:id="@+id/tvRidelName"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:layout_marginBottom="5dp"
        android:fontFamily="sans-serif-condensed-medium"
        android:text="ride name"
        android:textColor="#000000"
        android:textSize="30sp" />

<RatingBar
    android:id="@+id/ratingBar2"
    style="@style/Widget.AppCompat.RatingBar.Small"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_gravity="center_horizontal" />

<ImageView
    android:id="@+id/ivRideImage"
    android:layout_width="300dp"
    android:layout_height="200dp"
    android:transitionName="transition1"
    android:layout_gravity="center_horizontal"
    android:layout_marginBottom="30dp"
    android:layout_marginTop="20dp"
    />

    <TextView
        android:id="@+id/tvRideType"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="ride type"
        android:textAlignment="viewStart"
        android:textColor="#000000"
        android:textStyle="italic" />

    <TextView
        android:id="@+id/tvRideName"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/rideName" />

    <TextView
        android:id="@+id/tvRideVNo"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Vehicle No" />

    <TextView
        android:id="@+id/tvRideCost"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Cost per km" />

    <TextView
        android:id="@+id/tvRideDescrip"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Ride Description / Extra" />

    <Button
    android:id="@+id/contactBtn"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:background="@drawable/btn_type1"
    android:onClick="contactHandler"
    android:paddingStart="10dp"
    android:paddingEnd="10dp"
    android:text="@string/contactBtn"
    android:layout_marginLeft="150dp"
    android:layout_marginTop="5dp"
    android:layout_marginBottom="10dp"/>

<RatingBar
    android:id="@+id/RideRateInput"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:fadingEdge="horizontal|vertical" />

<Button
    android:id="@+id/RRateSubmit"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:text="@string/submit" />



</LinearLayout>